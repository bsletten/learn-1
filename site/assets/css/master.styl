normalize-css()
base()
c-base-font-size = 1.25rem 
c-base-size = 1.4rem
c-line-height-factor = 1.5
c-line-height = (c-base-font-size * c-line-height-factor)
c-h-margins = 15% 
c-fuego   = #C13117
c-spring  = #0C5AA7
c-spring2 = #4399CE
c-spring1 = #2072B6
c-spring3 = #72B8D8
c-spring5 = #575B5E
c-base-text = md-grey-800
c-section-center = 1000px
c-story-center = c-section-center 
c-nav-font = Texta-Black
c-mobile = 400px

*
  box-sizing: border-box
  
body
  font-size c-base-font-size
  +below(c-mobile)
    font-size (c-base-font-size / 1.45)
  line-height c-line-height
  font-family Texta-Regular
  font-style normal
  font-weight normal
  color c-base-text 
  background md-blue-200
  margin (c-base-size * 3)
  +below(c-mobile)
    margin c-base-size
    line-height (c-line-height / 2)
  //flexbox sticky footer
  display flex
  min-height 100vh
  flex-direction column
  //end fbsf
.toplogo
  margin-right auto
  margin-left auto
  width 200px
  +below(c-mobile)
    display none
div.header, div.footer
  background md-blue-100
  padding c-base-size
div.courses
  background md-blue-50
  padding c-base-size
div.course-listings
  stack()
  @media (min-width: 500px)
    div.course
      col(1/2, cycle: 2)
p.small
  font-size (c-base-font-size / 1.5)
h1.title
  font-weight normal
  text-align center
  +below(c-mobile)
    font-size (c-base-size / 1.5)
    font-weight bold 
    font-family Texta-Thin
  +above(1000px)
    font-size (c-base-size * 5)
    font-weight bold
    line-height (c-line-height / 5)
  font-family Texta-Black
  color c-base-text

h1,h2
  color md-blue-800
h3,h4
  color md-blue-500
//make these more responsive   
h1
  h1()
h2
  h2()
h3
  h3()
h4
  h4()
.media
  display flex
  align-items flex-start
  margin-bottom 0 
.media-figure
  margin-right 1em
.media-body
  flex 1
.media-body, .media-body :last-child
  margin-bottom 0
.media-title
  margin: 0 0 .5em
.media--center
  align-items center
.media--reverse > .media-figure
  order 1
  margin 0 0 0 1em
a
  text-decoration none
  font-weight normal